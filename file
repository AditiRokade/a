from pyspark.sql.functions import format_number, col

# Example: avoid scientific notation by formatting decimal with fixed number of decimals
df = df.withColumn("moa_acc_no_dec", col("moa_acc_no").cast("decimal(38,0)"))
df.select(format_number("moa_acc_no_dec", 0).alias("moa_acc_no_formatted")).show(truncate=False)
